<Window x:Name="MyApplication" x:Class="MultiGames.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiGames"
        mc:Ignorable="d"
        Title="Snake" Height="466" Width="795" ResizeMode="NoResize" KeyDown="MyApplication_KeyDown">
    <Window.Background>
        <ImageBrush ImageSource="Images/grass-free-texture.jpg"/>
    </Window.Background>
    <Grid x:Name="had_grid" Margin="0,0,4,0" Width="790">
        <Grid.Background>
            <ImageBrush ImageSource="Images/grass-free-texture.jpg"/>
        </Grid.Background>
        <Label x:Name="output" Content="Game Over" HorizontalAlignment="Left" Margin="195,139,0,0" Visibility="Collapsed" VerticalAlignment="Top" Background="{x:Null}" Foreground="Red" FontWeight="Bold" FontSize="72"/>
        <Label x:Name="points_output" Content="My points: 0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFC5FF00" FontSize="16" FontWeight="Bold"/>
    </Grid>
</Window>
